{% extends 'base.html.twig' %}

{% block title %}Panel Administratora{% endblock %}

{% block body %}
<style>
    /*.example-wrapper { margin: 0.5em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }*/
    /*.example-wrapper code { background: #F5F5F5; padding: 2px 6px; }*/
</style>

<div class="example-wrapper">
    <h1>Witaj! ✅</h1>

    {% for meeting in meetings %}
        <div class="report_block">
            <div>ID: {{ meeting.id }}</div>
            <div>Przedmiot: {{ meeting.name }}</div>
            <div>Prowadzący: {{ meeting.teacher }}    </div>
            <div>Sala: {{ meeting.room }}    </div>
            <div>Start: {{ meeting.start|date('Y-m-d H:i:s') }} </div>
            <div>Koniec: {{ meeting.stop|date('Y-m-d H:i:s') }}  </div>
            <button><a href="{{ '/generuj-raport/' ~ meeting.room|slice(8) ~ '/' ~ meeting.start|date('Y-m-d H:i:s')}}">Pobierz Raport</a></button>
        </div>
    {% endfor %}

    <button class="logout-button"><a href="/logout">Wyloguj</a></button>

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }

        .example-wrapper {
            margin: 1em auto;
            max-width: 95rem;
            width: 95%;
            font: 18px/1.5 sans-serif;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #333;
        }

        .report_block {
            margin-bottom: 20px;
            padding: 15px;
            background-color: #f5f5f5;
            border-radius: 6px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            justify-content: space-between;
        }

        .report_block div {
            margin-bottom: 10px;
            flex: 1;
        }

        button {
            padding: 10px;
            background-color: #4caf50;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #45a049;
        }

        a {
            text-decoration: none;
            color: #fff;
        }
        .logout-button {
            position: absolute;
            top: 2rem;
            right: 4rem;
            padding: 10px;
            background-color: #e74c3c;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .logout-button:hover {
            background-color: #c0392b;
        }
    </style>




</div>
{% endblock %}
