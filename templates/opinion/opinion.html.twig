{% extends 'base.html.twig' %}

{% block body %}
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Anton&display=swap">
        <title> Ocena Zajęć </title>
    </head>
    <body>
    <h1>Jak oceniasz dzisiejsze zajęcia</h1>
    <div class="emoji_container">
        <button class="emoji">😁</button>
        <button class="emoji">😐</button>
        <button class="emoji">😒</button>
    </div>

    <style>
        h1 {
            font-size: 5rem;
            font-family: 'Anton', sans-serif;
            display: flex;
            justify-content: center;
            text-align: center;
        }
        body{
            background-color: #fad1d1;
        }
        .emoji_container {
            display: flex;
            justify-content: center;
        }
        .emoji{
            padding: 0;
            border: none;
            background: none;
            font-size: 20rem;
        }

        @media screen and (max-width: 600px) {
            h1{
                font-size: 3rem;
            }
            .emoji_container{
                display: grid;
                justify-content: normal;
            }
            .emoji{
                font-size: 10rem;
            }
        }

    </style>
    </body>
    </html>

{% endblock %}